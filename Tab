  ldap_sts_fasd_cmnt    : abap.char(100);
  manager_email         : zzemail;
  manager_input         : zzmanager_act;
  manager_cmnt          : abap.char(100);
  input_shrd_by         : syuname;
  record_status         : abap.char(1);
  invalid_reason        : abap.char(100);
